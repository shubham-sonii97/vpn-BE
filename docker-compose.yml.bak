version: "3.8"

services:
  api:
    build:
      context: .
      dockerfile: api/src/Dockerfile
    env_file:
      - .env
    ports:
      - "${API_PORT:-4000}:4000"
    restart: unless-stopped
    networks:
      - vpnnet
    extra_hosts:
      - "host.docker.internal:host-gateway"
    volumes:
      - /etc/wireguard/server_public.key:/etc/wireguard/server_public.key:ro
    depends_on:
      - sidecar

  sidecar:
    build:
      context: .
      dockerfile: sidecar/Dockerfile
    env_file:
      - .env
    # sidecar needs to manage host wireguard interfaces; host networking is simplest on EC2
    network_mode: "host"
    cap_add:
      - NET_ADMIN
    volumes:
      - /etc/wireguard:/etc/wireguard:ro
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "curl -sSf http://127.0.0.1:8443/healthz || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5

networks:
  vpnnet:
    name: vpnnet
